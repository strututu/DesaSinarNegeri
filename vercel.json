{
  "functions": {
    "**/*.php": {
      "runtime": "vercel-php@0.6.0"
    }
  },
  "routes": [
    { "src": "/assets/(.*)", "dest": "/src/assets/$1" },
    { "src": "/css/(.*)", "dest": "/src/css/$1" },
    { "src": "/js/(.*)", "dest": "/src/js/$1" },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/login", "dest": "/src/pages/auth/login.php" },
    { "src": "/dashboard", "dest": "/src/pages/dashboard.php" },
    { "src": "/(.*)", "dest": "/src/index.php" }
  ]
}
